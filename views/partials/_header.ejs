<header>

  <nav class="navbar">
    <a class="navbar-brand"href="/" style="color: rgb(255, 255, 255);">Buy and Sell Pokemons!</a>


    <div class="pages">
      <a class="fav" href="/liked">My favorites </a>
        <a class="msg"href="/messages">Messages </a>
      <div>
        <% if (userID === 'Guest') { %>
          <form action="/users/login" method="POST" >
            <p class="user-greeting">Welcome, <%= userID %></p>
            <input type="text" placeholder="ID" class="login-input" name="user_id">
            <button type="submit" class="login-button">Login</button>
          </form>
        <% } else { %>
          <p class="user-greeting">Welcome, <%= userID %></p>
          <form method="POST" action="/users/logout"><button class="logout-button" type="submit">Logout</button></form>
        <% } %>
    </div>


    </form>

  </nav>
</header>
